{
  // Update settings
  "update.mode": "none",
  "update.showReleaseNotes": true,


  // Telemetry settings
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.telemetryLevel": "off",




  // Files settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "notebook.formatOnSave.enabled": true,
  "files.autoGuessEncoding": true,




  // Security settings
  "security.workspace.trust.untrustedFiles": "open",



  // Workbench settings
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.iconTheme": "catppuccin-perfect-macchiato",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.preferredDarkColorTheme": "Catppuccin Macchiato",
  "workbench.preferredLightColorTheme": "Catppuccin Frapp√©",

  "catppuccin.accentColor": "lavender",
  "catppuccin.bracketMode": "neovim",
  "catppuccin.workbenchMode": "default",
  "alt-catppuccin.syntaxMode": "default",

  "workbench.startupEditor": "none",
  "workbench.list.smoothScrolling": true,
  "workbench.panel.defaultLocation": "right",
  "workbench.quickOpen.preserveInput": true,
  "workbench.remoteIndicator.showExtensionRecommendations": false,
  "workbench.commandPalette.preserveInput": true,
  "workbench.editor.autoLockGroups": {
    "mainThreadWebview-markdown.preview": true
  },
  "workbench.editor.sharedViewState": true,
  "window.density.editorTabHeight": "compact",
  "window.restoreWindows": "folders",

  "explorer.fileNesting.enabled": true,
  "explorer.incrementalNaming": "smart",




  // Editor settings
  "editor.fontSize": 15.1,
  "editor.wordWrap": "off",
  "editor.indentSize": "tabSize",

  "editor.fontLigatures": true,
  "editor.fontFamily": "'FiraCode Nerd Font Ret','Droid Sans Mono', 'monospace', monospace",

  "editor.inlineSuggest.enabled": true,
  "editor.suggest.preview": true,
  "editor.inlineSuggest.fontFamily": "'FiraCode Nerd Font Ret'",
  "editor.statusBar.fontFamily": "'FiraCode Nerd Font Ret'",
  "editor.codeLensFontFamily": "'FiraCode Nerd Font Ret'",

  "editor.suggest.shareSuggestSelections": true,
  "editor.acceptSuggestionOnCommitCharacter": true,

  "editor.minimap.enabled": false,
  "editor.minimap.showSlider": "mouseover",
  "editor.minimap.size": "fill",

  "editor.stickyScroll.enabled": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "trailing",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.autoClosingComments": "always",




  // Code Runner settings
  "code-runner.saveFileBeforeRun": true,
  "code-runner.runInTerminal": true,
  "code-runner.preserveFocus": false,
  "code-runner.clearPreviousOutput": true,
  "code-runner.languageIdToFileExtensionMap": {
    "bat": ".bat",
    "powershell": ".ps1",
    "typescript": ".ts"
  },
  "code-runner.executorMap": {
    "javascript": "prnt_cprmt; node $fileName; prnt_cftr",
    "php": "prnt_cprmt; php $fileName; prnt_cftr",
    "python": "prnt_cprmt; python3 $fileName; prnt_cftr",
    "perl": "prnt_cprmt; perl $fileName; prnt_cftr",
    "ruby": "prnt_cprmt; ruby $fileName; prnt_cftr",
    "go": "prnt_cprmt; go run $fileName; prnt_cftr",
    "html": "librewolf",
    "java": "prnt_cprmt; cd $dir && javac $fileName && java $fileNameWithoutExt; prnt_cftr",
    "c": "prnt_cprmt; cd $dir && gcc $fileName -o $fileNameWithoutExt_compiled && ./$fileNameWithoutExt_compiled && rm $fileNameWithoutExt_compiled;  prnt_cftr"
  },
  "code-runner.enableAppInsights": false,



  // SCM settings
  "scm.alwaysShowActions": true,
  "scm.defaultViewMode": "tree",



  // Terminal settings
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultLocation": "view",



  // Auto Close Tag settings
  "auto-close-tag.insertSpaceBeforeSelfClosingTag": true,
  "auto-close-tag.SublimeText3Mode": true,



  // C/C++ settings
  "C_Cpp.autocompleteAddParentheses": true,



  // GitHub Copilot settings
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.chat.terminalChatLocation": "quickChat",



  // CSS Lint settings
  "css.lint.boxModel": "warning",
  "css.lint.duplicateProperties": "warning",



  // Emmet settings
  "emmet.triggerExpansionOnTab": true,



  // Git & copilot settings
  "git.autofetch": true,
  "git.fetchOnPull": true,
  "git.mergeEditor": true,
  "git.openRepositoryInParentFolders": "always",
  "git.pullBeforeCheckout": true,
  "git.showPushSuccessNotification": true,

  "diffEditor.maxComputationTime": 0,
  "diffEditor.codeLens": true,
  "merge-conflict.autoNavigateNextConflict.enabled": true,

  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },



  // Import Cost settings
  "importCost.fontStyle": "oblique",



  // JSON settings
  "json.format.keepLines": true,



  // Media Preview settings
  "mediaPreview.video.loop": true,



  // Python settings
  "python.analysis.autoFormatStrings": true,
  "python.terminal.focusAfterLaunch": true,
  "terminal.integrated.accessibleViewFocusOnCommandExecution": true,




  // Individual formatter settings
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[snippets]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },




  // Prettier settings
  "prettier.useTabs": true,

  // vim settings
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false,
  "workbench.sideBar.location": "right",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.diagnosticMode": "workspace",

}
